<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kbaldor.rxcontactstatus.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/contacts_label"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="My Contacts: " />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/contacts_list"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contacts_label" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/logged_in_label"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Logged In: "
        android:layout_marginTop="20dp"
        android:layout_below="@+id/contacts_list" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/logged_in_list"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logged_in_label" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/logged_out_label"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Logged Out: "
        android:layout_below="@+id/logged_in_list"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/logged_out_list"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logged_out_label" />
</RelativeLayout>
