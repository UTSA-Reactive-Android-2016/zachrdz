<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#d0d0d0"
            android:text="Contact Info"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#ccc"
            android:gravity="center_vertical"
            android:layout_below="@id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/editContactBtn"
            android:background="@drawable/ic_settings_black_48dp"
            android:backgroundTint="#ccc"
            android:layout_below="@+id/username"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/online"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:background="@drawable/ic_visibility_black_48dp"
            android:layout_alignParentStart="false"
            android:visibility="gone"
            android:layout_marginTop="4dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/offline"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:backgroundTint="@color/material_grey_900"
            android:background="@drawable/ic_visibility_off_black_48dp"
            android:layout_alignParentStart="false"
            android:layout_marginTop="4dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>